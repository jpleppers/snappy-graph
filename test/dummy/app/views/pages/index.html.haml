%h2 Pie Charts

%ul{data: {toggle: 'snappy-pie', colors: colors, colors_cycle: 'true'}}
  - percentages.each do |percentage|
    %li= percentage

%ul{data: {toggle: 'snappy-pie', colors: colors, colors_cycle: 'true', theme: 'sun'}}
  - percentages.each do |percentage|
    %li= percentage

%ul{data: {toggle: 'snappy-pie', colors: colors, colors_cycle: 'true', theme: 'bluered'}}
  - percentages.each do |percentage|
    %li= percentage

%ul{data: {toggle: 'snappy-pie', colors: colors, colors_cycle: 'true', theme: 'contrast'}}
  - percentages.each do |percentage|
    %li= percentage


